amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@oci/oci.pkl"
import "@oci/core/vcn.pkl"
import "@oci/core/networksecuritygroup.pkl"
import "@oci/core/networksecuritygroupsecurityrule.pkl"
import "@oci/identity/compartment.pkl"

// These values need to be set for your OCI tenancy
local testCompartmentId = read("env:OCI_COMPARTMENT_ID")
local testRunID = read("env:FORMAE_TEST_RUN_ID")

local stackName = "plugin-sdk-test-stack"

local testVcn = new vcn.VCN {
    label = "plugin-sdk-test-vcn"
    compartmentId = testCompartmentId
    cidrBlock = "10.0.0.0/16"
    displayName = "formae-plugin-sdk-test-\(testRunID)"
}

local testNsg = new networksecuritygroup.NetworkSecurityGroup {
    label = "plugin-sdk-test-nsg"
    compartmentId = testCompartmentId
    vcnId = testVcn.res.id
    displayName = "formae-plugin-sdk-test-\(testRunID)"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for OCI NetworkSecurityGroupSecurityRule"
  }

  new formae.Target {
    label = "oci-target"
    config = new oci.Config {
      profile = testProfile
      region = "us-chicago-1"
    }
  }

  new compartment.Compartment {
    label = "plugin-sdk-test-compartment"
    compartmentId = testCompartmentId
    name = "formae-plugin-sdk-test-\(testRunID)"
    description = "Compartment for conformance tests"
  }

  testVcn
  testNsg

  new networksecuritygroupsecurityrule.NetworkSecurityGroupSecurityRule {
    label = "plugin-sdk-test-nsg-rule"
    networkSecurityGroupId = testNsg.res.id
    direction = "INGRESS"
    protocol = "6"
    source = "0.0.0.0/0"
    sourceType = "CIDR_BLOCK"
    description = "formae-plugin-sdk-test-\(testRunID)"
    tcpOptions = new networksecuritygroupsecurityrule.TcpOptions {
      destinationPortRange = new networksecuritygroupsecurityrule.PortRange {
        min = 443
        max = 443
      }
    }
  }
}
